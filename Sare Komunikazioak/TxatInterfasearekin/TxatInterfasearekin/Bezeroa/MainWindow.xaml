<Window x:Class="Bezeroa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bezeroa"
        mc:Ignorable="d"
        Title="Bezeroa" Height="450" Width="800" Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="KonexioBtn" Content="Bezeroa konektatu" Width="160" Height="40" Background="#4CAF50" Foreground="White" Click="BezeroaKonektatu"/>
            <Button x:Name="DeskonexioBtn" Content="Bezeroa deskonektatu" Width="160" Height="40" Background="#E53935" Foreground="White" Click="BezeroaDeskonektatu" IsEnabled="False"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,20,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Zerbitzariaren IP-a:" VerticalAlignment="Center"/>
            <TextBox x:Name="ipTextBox" Grid.Column="1" Margin="10,0" Text="127.0.0.1"/>

            <Label Content="Izena:" Grid.Column="2" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="izenaTextBox" Grid.Column="3" Margin="10,0" Text="Mikel"/>
        </Grid>

        <GroupBox Grid.Row="2" Header="Txat" FontWeight="Bold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox x:Name="mainList" Grid.Row="0" Margin="0,0,0,10" d:ItemsSource="{d:SampleData ItemCount=5}"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBox x:Name="mezuaTextBox" Width="500" Height="30"/>
                    <Button x:Name="MezuaBidaliBtn" Content="Bidali" Width="247" Height="30" Background="#2196F3" Foreground="White" Click="BidaliMezua" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </GroupBox>

    </Grid>
</Window>