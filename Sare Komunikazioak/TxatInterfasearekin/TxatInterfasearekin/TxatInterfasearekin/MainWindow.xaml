<Window x:Class="TxatInterfasearekin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TxatInterfasearekin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Zerbitzaria hasi" Width="130" Height="32" Padding="8" Background="#4CAF50" Foreground="White" Click="ZerbitzariaPiztu"/>
            <Button Content="Zerbitzaria itzali" Width="130" Height="32" Padding="8" Background="#E53935" Foreground="White" Click="ZerbitzariaItzali"/>
        </StackPanel>

        <!-- Main list -->
        <GroupBox Header="Mezuak" Grid.Row="1" Margin="0,10,10,0" FontWeight="Bold">
            <ListBox x:Name="mainList" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </GroupBox>

        <!-- Right panel -->
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,10,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="User kopurua:"/>
                <TextBlock x:Name="UserKop" Text="0" FontWeight="Bold" Margin="5,0,0,0"/>
            </StackPanel>

            <GroupBox Header="User Lista" Margin="0,10,0,0" FontWeight="Bold">
                <ListBox x:Name="UserList" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            </GroupBox>
        </StackPanel>

    </Grid>
</Window>
